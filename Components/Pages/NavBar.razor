<div class="sub-navbar">
  <div class="sub-navbar-container">
    <button class="plan-button" onclick="window.location.href='/Planos'">Escolha um Plano</button>

    <div class="center-categories">
      <div class="dropdown">
        <button class="categories-dropdown" onclick="toggleDropdown()">
          Todas as categorias <i class="fas fa-chevron-down"></i>
        </button>
        <div id="dropdown-options" class="dropdown-content">
          <a href="#">Eletrônicos</a>
          <a href="#">Imóveis</a>
          <a href="#">Veículos</a>
          <a href="#">Moda</a>
          <a href="#">Serviços</a>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  function toggleDropdown() {
    document.getElementById("dropdown-options").classList.toggle("show");
  }

  // Fecha o dropdown ao clicar fora
  window.onclick = function(event) {
    if (!event.target.matches('.categories-dropdown')) {
      var dropdowns = document.getElementsByClassName("dropdown-content");
      for (var i = 0; i < dropdowns.length; i++) {
        if (dropdowns[i].classList.contains('show')) {
          dropdowns[i].classList.remove('show');
        }
      }
    }
  }
</script>

